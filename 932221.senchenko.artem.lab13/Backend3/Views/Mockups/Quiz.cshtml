@model Backend3.Models.QuizModel

<h2>Quiz</h2>

<p>@Model.A + @Model.B =</p>

<form method="post">

    <input asp-for="UserAnswer" class="form-control" style="max-width:250px;" />
    <span asp-validation-for="UserAnswer" class="text-danger"></span>

    <br />

    <button type="submit" name="action" value="next" class="btn btn-secondary">Next</button>
    <button type="submit" name="action" value="finish" class="btn btn-primary">Finish</button>

    
    <input type="hidden" asp-for="A" />
    <input type="hidden" asp-for="B" />
    <input type="hidden" asp-for="Step" />
    <input type="hidden" asp-for="CorrectCount" />

   
    @for (int i = 0; i < Model.History.Count; i++)
    {
        <input type="hidden" name="History[@i]" value="@Model.History[i]" />
    }

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
